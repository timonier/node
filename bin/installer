#!/bin/bash
set -e -u -x
cd "$(dirname "$0")"

# Check environment

_fail() {
    echo 1>&2 "$1"
    echo 1>&2 "Usage: $(basename "$0") [install|uninstall]"
    exit 255
}

if [ "$#" -lt 1 ]; then
    _fail "Invalid number of arguments."
fi

# Run installer

INSTALL_DIRECTORY="${INSTALL_DIRECTORY:-/usr/local/bin}"

case "$1" in
    install)
        mkdir -p "${INSTALL_DIRECTORY}"

        if [ -t 0 ]; then
            cp cmd "${INSTALL_DIRECTORY}"/create-react-app
            cp cmd "${INSTALL_DIRECTORY}"/generate-api-platform-client
            cp cmd "${INSTALL_DIRECTORY}"/ng
            cp cmd "${INSTALL_DIRECTORY}"/node
            cp cmd "${INSTALL_DIRECTORY}"/npm
            cp cmd "${INSTALL_DIRECTORY}"/serve
            cp cmd "${INSTALL_DIRECTORY}"/yarn
        else
            curl --location --output "${INSTALL_DIRECTORY}"/create-react-app "https://gitlab.com/timonier/node/raw/master/bin/cmd"
            curl --location --output "${INSTALL_DIRECTORY}"/generate-api-platform-client "https://gitlab.com/timonier/node/raw/master/bin/cmd"
            curl --location --output "${INSTALL_DIRECTORY}"/ng "https://gitlab.com/timonier/node/raw/master/bin/cmd"
            curl --location --output "${INSTALL_DIRECTORY}"/node "https://gitlab.com/timonier/node/raw/master/bin/cmd"
            curl --location --output "${INSTALL_DIRECTORY}"/npm "https://gitlab.com/timonier/node/raw/master/bin/cmd"
            curl --location --output "${INSTALL_DIRECTORY}"/serve "https://gitlab.com/timonier/node/raw/master/bin/cmd"
            curl --location --output "${INSTALL_DIRECTORY}"/yarn "https://gitlab.com/timonier/node/raw/master/bin/cmd"
        fi

        chmod +x "${INSTALL_DIRECTORY}"/create-react-app "${INSTALL_DIRECTORY}"/generate-api-platform-client "${INSTALL_DIRECTORY}"/ng "${INSTALL_DIRECTORY}"/node "${INSTALL_DIRECTORY}"/npm "${INSTALL_DIRECTORY}"/serve "${INSTALL_DIRECTORY}"/yarn
        ;;

    uninstall)
        rm -f "${INSTALL_DIRECTORY}"/create-react-app "${INSTALL_DIRECTORY}"/generate-api-platform-client "${INSTALL_DIRECTORY}"/ng "${INSTALL_DIRECTORY}"/node "${INSTALL_DIRECTORY}"/npm "${INSTALL_DIRECTORY}"/serve "${INSTALL_DIRECTORY}"/yarn
        ;;

    *)
        _fail "Argument \"$1\" is invalid."
        ;;
esac
